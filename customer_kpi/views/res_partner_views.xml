<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add KPI tab to Partner form -->
    <record id="res_partner_form_inherit_kpi" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.kpi</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Nyckeltal" name="kpi">
                    <group string="FÃ¶rsÃ¤ljningsstatistik">
                        <group>
                            <field name="kpi_order_count"/>
                            <field name="kpi_total_revenue" widget="monetary"/>
                            <field name="kpi_average_order" widget="monetary"/>
                        </group>
                        <group>
                            <field name="kpi_first_order_date"/>
                            <field name="kpi_last_order_date"/>
                            <field name="kpi_top_product"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
