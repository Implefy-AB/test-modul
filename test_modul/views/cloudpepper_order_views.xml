<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Sale Order Form View - add Cloudpepper fields -->
    <record id="sale_order_form_inherit_cloudpepper" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.cloudpepper</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Cloudpepper" name="cloudpepper">
                    <group>
                        <group>
                            <field name="cloudpepper_order_id"/>
                            <field name="cloudpepper_status"/>
                        </group>
                        <group>
                            <field name="last_sync_date"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
