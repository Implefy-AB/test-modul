<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_custom_sale_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="profile" t-value="doc.partner_id.report_profile_id"/>
                <t t-set="primary" t-value="profile.primary_color if profile else '#875A7B'"/>
                <t t-set="secondary" t-value="profile.secondary_color if profile else '#333333'"/>
                <t t-set="layout" t-value="profile.layout if profile else 'modern'"/>

                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Custom CSS based on profile colors -->
                        <style>
                            .report-header { color: <t t-esc="primary"/>; }
                            .report-table th { background-color: <t t-esc="primary"/>; color: white; }
                            .report-total { color: <t t-esc="primary"/>; }
                            .report-subtle { color: <t t-esc="secondary"/>; }

                            /* Modern layout */
                            .layout-modern .report-header { font-size: 28px; font-weight: 300; border-bottom: 3px solid <t t-esc="primary"/>; padding-bottom: 10px; }
                            .layout-modern .report-table { border-collapse: collapse; width: 100%; }
                            .layout-modern .report-table th, .layout-modern .report-table td { padding: 10px 12px; border-bottom: 1px solid #eee; }

                            /* Classic layout */
                            .layout-classic .report-header { font-size: 24px; font-weight: bold; text-transform: uppercase; border-bottom: 2px double <t t-esc="primary"/>; padding-bottom: 8px; }
                            .layout-classic .report-table { border-collapse: collapse; width: 100%; }
                            .layout-classic .report-table th, .layout-classic .report-table td { padding: 8px; border: 1px solid #ccc; }

                            /* Minimal layout -->  */
                            .layout-minimal .report-header { font-size: 22px; font-weight: 400; margin-bottom: 20px; }
                            .layout-minimal .report-table { border-collapse: collapse; width: 100%; }
                            .layout-minimal .report-table th { border-bottom: 2px solid <t t-esc="primary"/>; padding: 8px 4px; text-align: left; }
                            .layout-minimal .report-table td { padding: 8px 4px; border-bottom: 1px solid #f0f0f0; }
                        </style>

                        <div t-attf-class="layout-#{layout}">

                            <!-- Customer logo -->
                            <div t-if="profile and profile.logo" style="text-align: right; margin-bottom: 20px;">
                                <img t-att-src="image_data_uri(profile.logo)" style="max-height: 80px;"/>
                            </div>

                            <!-- Header -->
                            <h2 class="report-header">
                                Orderrapport: <t t-esc="doc.name"/>
                            </h2>

                            <!-- Customer info -->
                            <div style="margin: 20px 0;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="width: 50%; vertical-align: top;">
                                            <strong class="report-subtle">Kund:</strong><br/>
                                            <span t-esc="doc.partner_id.name"/><br/>
                                            <t t-if="doc.partner_id.street">
                                                <span t-esc="doc.partner_id.street"/><br/>
                                            </t>
                                            <t t-if="doc.partner_id.city">
                                                <span t-esc="doc.partner_id.zip"/> <span t-esc="doc.partner_id.city"/><br/>
                                            </t>
                                        </td>
                                        <td style="width: 50%; vertical-align: top;">
                                            <!-- Delivery address -->
                                            <t t-if="not profile or profile.show_delivery_address">
                                                <t t-if="doc.partner_shipping_id and doc.partner_shipping_id != doc.partner_id">
                                                    <strong class="report-subtle">Leveransadress:</strong><br/>
                                                    <span t-esc="doc.partner_shipping_id.name"/><br/>
                                                    <t t-if="doc.partner_shipping_id.street">
                                                        <span t-esc="doc.partner_shipping_id.street"/><br/>
                                                    </t>
                                                    <t t-if="doc.partner_shipping_id.city">
                                                        <span t-esc="doc.partner_shipping_id.zip"/> <span t-esc="doc.partner_shipping_id.city"/><br/>
                                                    </t>
                                                </t>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Order info -->
                            <div style="margin-bottom: 20px;">
                                <strong class="report-subtle">Orderdatum:</strong>
                                <span t-field="doc.date_order" t-options="{'widget': 'date'}"/>

                                <!-- Payment terms -->
                                <t t-if="(not profile or profile.show_payment_terms) and doc.payment_term_id">
                                    <span style="margin-left: 30px;">
                                        <strong class="report-subtle">Betalningsvillkor:</strong>
                                        <span t-esc="doc.payment_term_id.name"/>
                                    </span>
                                </t>
                            </div>

                            <!-- Product table -->
                            <table class="report-table">
                                <thead>
                                    <tr>
                                        <th style="text-align: left;">Produkt</th>
                                        <th style="text-align: left;">Beskrivning</th>
                                        <th style="text-align: right;">Antal</th>
                                        <th style="text-align: right;">Enhetspris</th>
                                        <t t-if="not profile or profile.show_discount">
                                            <th style="text-align: right;">Rabatt</th>
                                        </t>
                                        <t t-if="not profile or profile.show_taxes">
                                            <th style="text-align: right;">Moms</th>
                                        </t>
                                        <th style="text-align: right;">Summa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.order_line" t-as="line">
                                        <tr>
                                            <td><span t-esc="line.product_id.name"/></td>
                                            <td><span t-esc="line.name"/></td>
                                            <td style="text-align: right;">
                                                <span t-esc="line.product_uom_qty"/>
                                                <span t-esc="line.product_uom.name"/>
                                            </td>
                                            <td style="text-align: right;">
                                                <span t-esc="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                            <t t-if="not profile or profile.show_discount">
                                                <td style="text-align: right;">
                                                    <span t-esc="line.discount"/>%
                                                </td>
                                            </t>
                                            <t t-if="not profile or profile.show_taxes">
                                                <td style="text-align: right;">
                                                    <t t-foreach="line.tax_id" t-as="tax">
                                                        <span t-esc="tax.name"/>
                                                    </t>
                                                </td>
                                            </t>
                                            <td style="text-align: right;">
                                                <span t-esc="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Totals -->
                            <div style="margin-top: 20px; text-align: right;">
                                <table style="width: 40%; margin-left: auto;">
                                    <t t-if="not profile or profile.show_taxes">
                                        <tr>
                                            <td><strong class="report-subtle">Netto:</strong></td>
                                            <td style="text-align: right;">
                                                <span t-esc="doc.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong class="report-subtle">Moms:</strong></td>
                                            <td style="text-align: right;">
                                                <span t-esc="doc.amount_tax" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td><strong class="report-total" style="font-size: 18px;">Totalt:</strong></td>
                                        <td style="text-align: right;">
                                            <strong class="report-total" style="font-size: 18px;">
                                                <span t-esc="doc.amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Notes -->
                            <t t-if="(not profile or profile.show_notes) and doc.note">
                                <div style="margin-top: 30px;">
                                    <strong class="report-subtle">Anteckningar:</strong><br/>
                                    <span t-field="doc.note"/>
                                </div>
                            </t>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
