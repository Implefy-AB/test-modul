<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Report Profile field to Partner form -->
    <record id="res_partner_form_inherit_report_profile" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.report.profile</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Rapportprofil" name="report_profile">
                    <group>
                        <field name="report_profile_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
