<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add print button to Sale Order form -->
    <record id="sale_order_form_inherit_custom_report" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.report</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(sales_report.action_report_custom_sale_order)d"
                        string="Skriv ut kundrapport"
                        type="action"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>

</odoo>
